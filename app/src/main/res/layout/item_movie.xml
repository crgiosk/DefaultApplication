<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/posterMovieImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginEnd="@dimen/medium"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/posterMovieImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/posterMovieImageView"
            app:layout_constraintTop_toTopOf="@+id/posterMovieImageView">

            <TextView
                android:id="@+id/titleMovieTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Movie title" />


            <TextView
                android:id="@+id/yearMovieTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Year Movie" />

            <TextView
                android:id="@+id/typeMovieTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Type Movie" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>